@model List<eCinema.Domain.DTO.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-2">
        <a class="btn btn-dark" asp-controller="Tickets" asp-action="Create">Add a Ticket</a>

    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            
            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height:35rem;">
                    <img class="card-img-top" src="@item.TicketImage" style="height:50%;"alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.TicketName</h5>
                        <p class="card-text">Genre: @item.TicketGenre</p>
                        <p class="card-text">Date: @item.TicketDate</p>
                        <p class="card-text">Price: @item.TicketPrice</p>
                        <p class="card-text"></p>
                        <div class="card-footer">
                            <a class="btn btn-dark" asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id">Add to cart</a>
                            <a class="btn btn-dark" asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>

@model eCinema.Domain.DTO.AddToShoppingCartDto

@{ 
    ViewData["Title"] = "Add to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Selected Ticket to Shopping Cart:</h1>

<div class="row">
    <div class="col-md-3 m-auto">
        <form asp-action="AddTicketToCart" method="post" >
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.TicketName"></label>
                <input disabled asp-for="SelectedTicket.TicketName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
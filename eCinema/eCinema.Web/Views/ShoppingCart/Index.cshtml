@model eCinema.Domain.DTO.DTO.ShoppingCartDto

<div class="container">

    <div class="row m-5">
        <a asp-action="OrderNow" class="btn btn-success">Order Now</a>
    </div>

    <div class="row m-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.TicketInShoppingCarts1.Count; i++)
                {
                    var item = Model.TicketInShoppingCarts1[i];
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.Ticket.TicketName</td>
                        <td>@item.Ticket.TicketPrice</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Ticket.TicketPrice*item.Quantity)</td>
                        <td><a asp-controller="ShoppingCart" asp-route-id="@item.Ticket.Id" asp-action="DeleteTicketFromShoppingCart" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">Total Price:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>